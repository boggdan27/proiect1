<div id="register_form" style="width: 700px; height: 600px; background-color: lightblue ; visibility:hidden; position: absolute; left: 450px; margin-top: 120px;">


    <div class="block block-rounded" style="width: 600px; margin:auto; margin-top: 100px; border-color: black;">
        <div class="block-header block-header-default" style="color: white; background-color: #22577E">
            <h3 class="block-title"><strong>Inregistrare</strong></h3>
        </div>
        <div class="block-content">
            <div class="row">
                <div>
                    <form class="mb-5" action="be_forms_layouts.html" method="POST" onsubmit="return false;">

                        <div class="grid-container" style="display:grid; grid-template-columns:50% 50%;">

                            <div class="row mb-4" style="text-align: right; margin-right:10px;">
                                <label>Nume: </label>
                            </div>
                            <div>
                                <input type="text" class="form-control" id="nume_input_register" maxlength="250" />
                            </div>

                            <div class="row mb-4" style="text-align: right; margin-right:10px;">
                                <label>Prenume: </label>
                            </div>
                            <div>
                                <input type="text" class="form-control" id="prenume_input_register" maxlength="250" />
                            </div>

                            <div class="row mb-4" style="text-align: right; margin-right:10px;">
                                <label>CNP: </label>
                            </div>
                            <div>
                                <input type="text" class="form-control" id="cnp_input_register" maxlength="250" />
                            </div>

                            <div class="row mb-4" style="text-align: right; margin-right:10px;">
                                <label>Seria: </label>
                            </div>
                            <div>
                                <input type="text" class="form-control" id="seria_input_register" maxlength="250" />
                            </div>


                            <div class="row mb-4" style="text-align: right; margin-right:10px;">
                                <label>Nr: </label>
                            </div>
                            <div>
                                <input type="text" class="form-control" id="nr_input_register" maxlength="250" />
                            </div>


                            <div class="row mb-4" style="text-align: right; margin-right:10px;">
                                <label>Mail: </label>
                            </div>
                            <div>
                                <input type="text" class="form-control" id="mail_input_register" maxlength="250" />
                            </div>

                            <div class="row mb-4" style="text-align: right; margin-right:10px;">
                                <label>Parola: </label>
                            </div>
                            <div>
                                <input type="text" class="form-control" id="password_input_register" maxlength="250" />
                            </div>


                        </div>

                        <div class="row mb-4" style="display:flex; justify-content: center; align-items:center; text-align: center;">
                            <div class="ms-auto">
                                <button class="btn btn-danger" onclick="anulare_register()"> Anulare</button>
                                <button class="btn btn-success" onclick="inregistrare()"> Inregistrare</button>
                            </div>
                        </div>


                    </form>
                </div>
            </div>
        </div>
    </div>

</div>

<script type="text/javascript">

    function inregistrare_popup() {
        var f = document.getElementById("register_form");
        f.style.visibility = "visible";

    }

    function anulare_register() {
        var f = document.getElementById("register_form");
        f.style.visibility = "hidden";
    }

    function inregistrare() {
        var obiect = new Object();


        obiect.CNP = document.getElementById("cnp_input_register").value;
        obiect.Nume = document.getElementById("nume_input_register").value;
        obiect.Prenume = document.getElementById("prenume_input_register").value;
        obiect.SerieBuletin = document.getElementById("seria_input_register").value;
        obiect.NrBuletin = document.getElementById("nr_input_register").value;
        obiect.Mail = document.getElementById("mail_input_register").value;
        obiect.Parola = document.getElementById("password_input_register").value;
       
        

        $.ajax({
            url: '/Home/Register_User',
            type: "POST",
            dataType: "json",
            data: {
                param: obiect
            }
        }).done(function (data) {
            window.location.href = data.redirecturl;
        });
    }
</script>